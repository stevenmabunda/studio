
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read images (for public posts)
    // Allow authenticated users to write to their own user-specific folder
    match /{folder}/{userId}/{fileName} where folder in ['posts', 'avatars', 'banners'] {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
