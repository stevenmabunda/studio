
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read content.
    // In this app, content like avatars and post images are not private.
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Allow users to upload media only to their own designated folders.
    // The path for posts is `posts/{userId}/{fileName}`.
    match /posts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // The path for avatars is `avatars/{userId}`.
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // The path for banners is `banners/{userId}`.
    match /banners/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
