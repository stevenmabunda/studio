rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Rules for user-specific content
    match /avatars/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /banners/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /posts/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
