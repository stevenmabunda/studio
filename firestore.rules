
rules_version = '2';

service cloud.firestore {
  match /databases/bholo/documents {

    // Users can view profiles, but only write to their own
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }

    // Rules for posts
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow delete: if request.auth.uid == resource.data.authorId;
      
      // For updates:
      // - The author can update anything.
      // - Other authenticated users can update interaction fields (likes, comments, etc.)
      //   but are blocked from changing immutable fields like content, authorId, or createdAt.
      allow update: if request.auth.uid == resource.data.authorId ||
                     ( request.auth != null &&
                       request.resource.data.content == resource.data.content &&
                       request.resource.data.authorId == resource.data.authorId &&
                       request.resource.data.createdAt == resource.data.createdAt
                     );
    }

    // Authenticated users can read and create comments
    match /posts/{postId}/comments/{commentId} {
      allow read, create: if request.auth != null;
    }

    // Users can only read and write to their own subcollections (notifications, bookmarks)
    match /users/{userId}/{subcollection}/{docId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Authenticated users can read and create topics
    match /topics/{topicId} {
      allow read, create: if request.auth != null;
    }
  }
}
