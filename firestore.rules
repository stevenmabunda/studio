
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // By default, authenticated users can read anything, but not write anything.
    // Specific write rules are defined for each collection below.
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Users can write to their own user document.
    match /users/{userId} {
      allow write: if request.auth.uid == userId;
    }

    // Users can create, update, and delete their own posts.
    // Note: The update rule will need to be enhanced later to allow
    // other users to like posts or increment comment counters.
    match /posts/{postId} {
      allow create: if request.auth.uid == request.resource.data.authorId;
      allow update, delete: if request.auth.uid == resource.data.authorId;
    }

    // Users can create comments, which are associated with their user ID.
    match /posts/{postId}/comments/{commentId} {
      allow create: if request.auth.uid == request.resource.data.authorId;
    }
    
    // Users can create their own stories.
    match /stories/{storyId} {
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
